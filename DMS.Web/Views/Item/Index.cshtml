@model List<DMS.Application.Items.GetItemsQueryResult>
@{
    ViewData["Title"] = "Index";
}
@{int i = 1;}
<link href="~/css/style.css" rel="stylesheet" />

<button onClick='redirectOnClick()' style=" float: right;background:#066cbf; outline: none; border: none; margin-bottom: 12px" id='myButton' class="btn btn-primary"><i class="fa fa-plus" style="color:white"></i> Add</button>
<table class="table" id="tbl">
    <thead>
        <tr>
            <th class="cell100 column1">#</th>
            <th class="cell100 column2">Image </th>
            <th class="cell100 column3">Name</th>
            <th class="cell100 column5">Description </th>
            <th class="cell100 column6">Price </th>
            <th class="cell100 column6">UOM </th>
            <th class="cell100 column6">Quantity </th>


        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
        <tr class="row100 body">
            <td class="cell100 column1"><a data-toggle="tooltip" style="font-size:18px" asp-route-Id="@item.Id">@(i++)</a></td>
            <td class="cell100 column2"><img src="data:image/png;base64,@item.Image" style="height:50px;width:50px;border-radius:50%" alt="image" class="image" /></td>
            <td class="cell100 column3">@item.Name</td>
            <td class="cell100 column4">@item.Description</td>
            <td class="cell100 column4">@item.Price</td>
            <td class="cell100 column4">@item.UOM</td>
            <td class="cell100 column4">@item.QTY</td>

        </tr>
        }
        }
        @if (Model.Count == 0)
        {
            <tr><td  rowspan="2">No Data To Be Shown....</td></tr>
        }
    </tbody>
</table>


<script>
    function redirectOnClick() {
        document.location = '/Item/Add';
    }
</script>

